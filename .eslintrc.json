{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "module": "readonly",
    "process": "readonly",
    "require": "readonly",
    "btoa": "readonly",
    "atob": "readonly",
    "Promise": "readonly",
    "console": "readonly",
    "JSON": "readonly",
    "URL": "readonly"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-undef": ["error", { "typeof": true }],
    "no-unused-vars": ["warn", { "vars": "all", "args": "none" }]
  },
  "ignorePatterns": ["node_modules/", "dist/", "test/fixtures/"]
}
