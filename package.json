{
  "name": "splainer-search",
  "version": "0.1.0",
  "description": "A framework-agnostic search library for Solr, Elasticsearch, OpenSearch, and Vectara",
  "type": "module",
  "main": "api/index.js",
  "exports": {
    ".": {
      "import": "./api/index.js",
      "require": "./api/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup api/index.js --format esm,cjs --dts --sourcemap",
    "test": "vitest run",
    "dev:test": "vitest",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "keywords": [
    "search",
    "solr",
    "elasticsearch",
    "opensearch",
    "vectara"
  ],
  "author": "sstults",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.1",
    "vitest": "^1.4.0"
  },
  "files": [
    "api/",
    "core/",
    "adapters/",
    "net/",
    "util/"
  ]
}
