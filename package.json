{
  "name": "splainer-search",
  "version": "0.1.0",
  "description": "A framework-agnostic search library for Solr, Elasticsearch, OpenSearch, and Vectara",
  "type": "module",
  "main": "module.js",
  "exports": {
    ".": {
      "import": "./module.js",
      "require": "./module.cjs"
    }
  },
  "scripts": {
    "build": "esbuild module.js --bundle --format=cjs --platform=node --outfile=module.cjs --sourcemap",
    "test": "vitest run",
    "dev:test": "vitest",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "keywords": [
    "search",
    "solr",
    "elasticsearch",
    "opensearch",
    "vectara"
  ],
  "author": "sstults",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "testcontainers": "^11.10.0",
    "tsup": "^8.0.1",
    "vitest": "^4.0.16"
  },
  "files": [
    "api/",
    "factories/",
    "services/",
    "src/",
    "values/",
    "core/",
    "adapters/",
    "module.js"
  ],
  "dependencies": {
    "axios": "^1.13.2",
    "dockerode": "^4.0.9"
  }
}
